{
  "name": "@infectedbyjs/emitts",
  "version": "1.0.0",
  "type": "module",
  "description": "A type-safe event emitter for TypeScript with priority-based listeners, sequential/parallel execution strategies, and memory leak detection",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "example": "node --loader ts-node/esm examples/basic.ts",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts --ignore-pattern src/**/*.test.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "events",
    "emitter",
    "event-emitter",
    "type-safe",
    "async",
    "promise",
    "priority",
    "memory-safe"
  ],
  "author": "Infected-by-js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Infected-by-js/emitts.git"
  },
  "bugs": {
    "url": "https://github.com/Infected-by-js/emitts/issues"
  },
  "homepage": "https://github.com/Infected-by-js/emitts#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.0",
    "vitest": "^1.3.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint",
      "yarn format"
    ]
  }
}
